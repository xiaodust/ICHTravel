<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.icht.backfront.dao.ShoppingCartDAO">
    <resultMap id="BaseResultMap" type="com.icht.backfront.dataobject.ShoppingCartDO">
        <id column="user_id" jdbcType="VARCHAR" property="userId"/>
        <result column="item_id" jdbcType="VARCHAR" property="itemIdJson" javaType="java.lang.String"/>
        <result column="number" jdbcType="INTEGER" property="number"/>
        <result column="total_price" jdbcType="INTEGER" property="totalPrice"/>
        <result column="gmt_created" jdbcType="TIMESTAMP" property="gmtCreated"/>
        <result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified"/>
    </resultMap>
    
    <select id="getByUserId" resultMap="BaseResultMap">
        SELECT user_id, item_id, number, total_price, gmt_created, gmt_modified
        FROM shopping_cart
        WHERE user_id=#{userId}
    </select>
    
    <update id="updateShoppingCart">
        UPDATE shopping_cart
        <set>
            <if test="itemId != null">
                item_id=#{itemIdJson},
            </if>
            <if test="number != null">
                number=#{number},
            </if>
            <if test="totalPrice != null">
                total_price=#{totalPrice},
            </if>
            gmt_modified=now()
        </set>
        WHERE user_id=#{userId}
    </update>
    
    <insert id="insertShoppingCart">
        INSERT INTO shopping_cart (user_id, item_id, number, total_price, gmt_created, gmt_modified) 
        VALUES
        (#{userId}, #{itemIdJson}, #{number}, #{totalPrice}, #{gmtCreated,jdbcType=TIMESTAMP}, #{gmtModified,jdbcType=TIMESTAMP})
    </insert>
</mapper>