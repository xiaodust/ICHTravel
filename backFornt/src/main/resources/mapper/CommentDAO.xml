<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.icht.backfront.dao.CommentDAO">
    <resultMap id="BaseResultMap" type="com.icht.backfront.dataobject.CommentDO">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="note_id" jdbcType="VARCHAR" property="noteId"/>
        <result column="parent_id" jdbcType="VARCHAR" property="parentId"/>
        <result column="user_id" jdbcType="VARCHAR" property="userId"/>
        <result column="user_name" jdbcType="VARCHAR" property="userName"/>
        <result column="content" jdbcType="LONGVARCHAR" property="content"/>
        <result column="liked" jdbcType="INTEGER" property="liked"/>
        <result column="gmt_created" jdbcType="TIMESTAMP" property="gmtCreated"/>
        <result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified"/>
    </resultMap>
    
    <insert id="insert" parameterType="com.icht.backfront.dataobject.CommentDO">
        INSERT INTO comment (
            id,
            note_id,
            parent_id,
            user_id,
            user_name,
            content,
            liked,
            gmt_created,
            gmt_modified
        ) VALUES (
            #{id},
            #{noteId},
            #{parentId},
            #{userId},
            #{userName},
            #{content},
            #{liked},
            #{gmtCreated,jdbcType=TIMESTAMP},
            #{gmtModified,jdbcType=TIMESTAMP}
        )
    </insert>
    
    <delete id="delete">
        DELETE FROM comment WHERE id = #{id}
    </delete>
    
    <select id="selectByNoteId" resultMap="BaseResultMap">
        SELECT * FROM comment WHERE note_id = #{noteId} ORDER BY gmt_created DESC
    </select>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT id,
               note_id,
               parent_id,
               user_id,
               user_name,
               content,
               liked,
               gmt_created,
               gmt_modified
        FROM comment
        WHERE id=#{id}
    </select>
    
    <update id="update" parameterType="com.icht.backfront.dataobject.CommentDO">
        <selectKey resultType="com.icht.backfront.dataobject.CommentDO" keyProperty="result" order="AFTER">
            SELECT id,
                   note_id,
                   parent_id,
                   user_id,
                   user_name,
                   content,
                   liked,
                   gmt_created,
                   gmt_modified
            FROM comment
            WHERE id=#{id}
        </selectKey>
        UPDATE comment
        <set>
            <if test="noteId != null">
                note_id=#{noteId},
            </if>
            <if test="parentId != null">
                parent_id=#{parentId},
            </if>
            <if test="userId != null">
                user_id=#{userId},
            </if>
            <if test="userName != null">
                user_name=#{userName},
            </if>
            <if test="content != null">
                content=#{content},
            </if>
            <if test="liked != null">
                liked=#{liked},
            </if>
            <if test="gmtModified != null">
                gmt_modified=#{gmtModified}
            </if>
            <if test="gmtModified == null">
                gmt_modified=now()
            </if>
        </set>
        WHERE id=#{id}
    </update>
</mapper>