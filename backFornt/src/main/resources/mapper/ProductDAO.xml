<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.icht.backfront.dao.ProductDAO">
    <resultMap id="BaseResultMap" type="com.icht.backfront.dataobject.ProductDO">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="price" jdbcType="DECIMAL" property="price"/>
        <result column="purchase_num" jdbcType="INTEGER" property="purchaseNum"/>
        <result column="product_intro" jdbcType="VARCHAR" property="productIntro"/>
        <result column="product_img" jdbcType="VARCHAR" property="productImg"/>
        <result column="gmt_created" jdbcType="TIMESTAMP" property="gmtCreated"/>
        <result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified"/>
    </resultMap>
    
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product (id, name, price, purchase_num, product_intro, product_img, gmt_created, gmt_modified) VALUES
        (#{id}, #{name}, #{price}, #{purchaseNum}, #{productIntro}, #{productImg}, #{gmtCreated}, #{gmtModified})
    </insert>
    
    <update id="update">
        UPDATE product
        <set>
            <if test="name != null">
                name=#{name},
            </if>
            <if test="price != null">
                price=#{price},
            </if>
            <if test="purchaseNum != null">
                purchase_num=#{purchaseNum},
            </if>
            <if test="productIntro != null">
                product_intro=#{productIntro},
            </if>
            <if test="productImg != null">
                product_img=#{productImg},
            </if>
            gmt_modified=now()
        </set>
        WHERE id=#{id}
    </update>
    
    <delete id="delete">
        DELETE FROM product WHERE id=#{id}
    </delete>
    
    <select id="findAll" resultMap="BaseResultMap">
        SELECT id, name, price, purchase_num, product_intro, product_img, gmt_created, gmt_modified
        FROM product
    </select>
    
    <select id="findById" resultMap="BaseResultMap">
        SELECT id, name, price, purchase_num, product_intro, product_img, gmt_created, gmt_modified
        FROM product
        WHERE id=#{id}
    </select>

    <select id="pageQuery" resultMap="BaseResultMap">
        SELECT id, name, price, purchase_num, product_intro, product_img, gmt_created, gmt_modified
        FROM product
        <bind name="currentIndex" value="pagination * pageSize"/>
        limit #{currentIndex},#{pageSize}
    </select>
    
    <select id="selectAllCounts" resultType="int">
        SELECT COUNT(*) FROM product
    </select>
</mapper>